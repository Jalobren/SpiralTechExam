@model Bank.Web.Models.Transactions.TransferFundsViewModel

@{
    ViewData["Title"] = "TransferFunds";
}

<h2>Transfer Funds</h2>

<h4>Transfer your funds to another account</h4>
<hr />
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <span class="alert-danger">@Model.ErrorMessage</span>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="TransferTransaction" method="post">
            <input type="hidden" asp-for="AccountId" />
            <input type="hidden" asp-for="LastTransactionDate" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" ReadOnly="true" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentBalance" class="control-label"></label>
                <input asp-for="CurrentBalance" class="form-control" ReadOnly="true" />
                <span asp-validation-for="CurrentBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransferToAccountNumber" class="control-label"></label>
                <input asp-for="TransferToAccountNumber" class="form-control" />
                <span asp-validation-for="TransferToAccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Transfer" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back To My Account", "Detail", "Account", new { id = Model.AccountId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}